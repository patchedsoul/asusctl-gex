<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.asuslinux.Daemon">
    <!--
     Create new profile and make active
     -->
    <method name="SetProfile">
      <arg name="profile" type="s" direction="in"/>
    </method>
    <!--
     New or modify profile details and make active, will create if it does not exist
     -->
    <method name="NewOrModify">
      <arg name="profile" type="(syybus)" direction="in"/>
    </method>
    <!--
     Fetch the active profile name
     -->
    <method name="NextProfile">
    </method>
    <!--
     Fetch the active profile name
     -->
    <method name="ActiveName">
      <arg type="s" direction="out"/>
    </method>
    <!--
     Fetch the active profile details
     -->
    <method name="ActiveData">
      <arg type="(syybus)" direction="out"/>
    </method>
    <!--
     Fetch all profile data
     -->
    <method name="Profiles">
      <arg type="a(syybus)" direction="out"/>
    </method>
    <method name="ProfileNames">
      <arg type="as" direction="out"/>
    </method>
    <method name="Remove">
      <arg name="profile" type="s" direction="in"/>
    </method>
    <signal name="NotifyProfile">
      <arg name="profile" type="(syybus)"/>
    </signal>
  </interface>
</node>
